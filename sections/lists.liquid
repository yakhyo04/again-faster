
<style>
  .lists__div{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 29px 0 40px 0;
    padding: 0 20px;
    grid-gap: 10px;
    font-family: 'Open Sans';
  }
  .lists__link{
    text-decoration: none;
    color: #000;
    text-transform: uppercase;
    color: #C4C4C4;
    font-size: 12px;
    font-weight: 400;
    line-height: 140%;
    letter-spacing: 0.175em;
  }
  .lists__slash{
    color: #C4C4C4;
  }
  .lists__slash:last-child{
    display: none;
  }
  .active{
    padding-bottom: 10px;
    color: #000;
    border-bottom: 1px solid #C2A578;
  }
</style>

<div class="lists__div">
{% for coll in section.settings.lists %}
    <a aria-label="sections link to" class="lists__link {% if collection.title == coll.title %} active {% endif %} " href="{{ coll.url }}">{{ coll.title }}</a>
    <span class="lists__slash">/</span>
{% endfor %}
</div>

{% schema %}
  {
    "name": "Collection List",
    "settings": [
      {
        "type": "collection_list",
        "id": "lists",
        "label": "Collection Label"
      }
    ]
  }
{% endschema %}