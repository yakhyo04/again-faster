<!-- /templates/customers/register.liquid -->

<style>
    .register{
        width: 442px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        font-family: 'Open Sans';
        margin: 80px auto 120px auto;
    }
    .register__inputs--wrapper{
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 16px;
        height: 63px;
        margin-bottom: 24px;
    }
    .register__title{
        text-align: center;
        padding-bottom: 63px;
    }
    .register__label{
        display: block;
        font-weight: 400;
        font-size: 12px;
        line-height: 167.5%;
    }
    .register__input{
        width: 100%;
        border: none;
        outline: none;
        padding: 8px 0 12px 0;
        font-weight: 600;
        font-size: 14px;
        line-height: 167.5%;
        color: #000;
    }
    .register__input--wrapper{
        border-bottom: 1px solid #C4C4C4;
        margin-bottom: 24px;
    }
    .register__button,
    .register__btn{
        background-color: black;
        border: 1px solid black;
        color: #fff;
        font-weight: 400;
        font-size: 12px;
        line-height: 16px;
        text-align: center;
        letter-spacing: 0.175em;
        text-transform: uppercase;
        width: 100%;
        display: block;
        height: 43px;
        cursor: pointer;
    }
    .register__button:hover{
        background-color: transparent;
        color: #000;
    }
    .register__btn{
        width: 442px;
        background-color: transparent;
        color: #000;
    }
    .register__btn:hover{
        background-color: #000;
        color: #fff;
    }
    .register__text{
        font-weight: 400;
        font-size: 14px;
        line-height: 167.5%;
        text-align: center;
        padding: 40px 0 24px 0;
    }
</style>

<div class="register">

<h3 class="register__title">{{ 'general.register.title' | t }}</h3>
{% form 'create_customer' %}

{{ form.errors | default_errors }}

<div class="register__inputs--wrapper">

<div class="register__input--wrapper">
    <label class="register__label" for="first_name">{{ 'general.register.firstName' | t }}</label>
<input class="register__input" placeholder="First Name" type="text" value="" name="customer[first_name]" size="30" />
</div>
<div class="register__input--wrapper">
    <label class="register__label" for="last_name">{{ 'general.register.lastName' | t }}</label>
<input class="register__input" placeholder="Last Name" type="text" value="" name="customer[last_name]" size="30" />
</div>
</div>

<div class="register__input--wrapper">
    <label class="register__label" for="email">{{ 'general.register.email' | t }}</label>
    <input class="register__input" placeholder="Email Address" type="email" value="" name="customer[email]" size="30" />
</div>

<div class="register__input--wrapper">
    <label class="register__label" for="password">{{ 'general.register.password' | t }}</label>
    <input class="register__input" id="password" placeholder="Password" type="password" value="" name="customer[password]" size="30" />
</div>

<div class="register__input--wrapper">
    <label class="register__label" for="password2">{{ 'general.register.confirm' | t }}</label>
    <input class="register__input" placeholder="Confirm Password" id="password2" type="password" value="" name="customer[password_confirmation]" size="30" />
</div>

<input class="register__button" type="submit" value="Create an Account" />

{% endform %}

<form action="/account/login">
    <p class="register__text">{{ 'general.register.text' | t }}</p>
    <input type="submit" class="register__btn" value="Log In">
    </form>

</div>